page{
  background: #eee;
}
.row{
  overflow: hidden;
  line-height: 50px;
  border-bottom: 1px solid #ccc;
  display: flex;
  color: #777;
  background: #fff;
}
.title{
  padding-left: 10px;
  width: 90px;
  flex: 1; 
}
.info{
  flex: 1;
  width: 100px;
  text-align: left;
}
.submit-button{
  margin: 10px 8px 0px 8px;
  background: #ff9700;
  line-height: 38px;
  border-radius: 6px;
  text-align: center;
  color: #fff;
}
.info-input{
  height: 50px;
}